<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="210dp"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="20dp"
    android:id="@+id/main_card_category"
    android:background="@drawable/rounded_scroll">

    <androidx.cardview.widget.CardView xmlns:cardview="http://schemas.android.com/apk/res-auto"
        android:id="@+id/my_card_view"
        android:layout_width="100dp"
        android:layout_height="190dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="7dp"
        cardview:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/book_img_id"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="#716F6F"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/book_title_id"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#BACAD6"
                android:gravity="center"
                android:text="Book Title"
                android:textColor="#000"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/book_Price_id"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#BACAD6"
                android:gravity="center"
                android:text="Price"
                android:textColor="#000"
                android:textSize="13sp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
