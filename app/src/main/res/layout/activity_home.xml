<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            tools:context=".HomeActivity">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/SlideViewPager"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:background="@drawable/rounded_scroll" />

            <LinearLayout
                android:id="@+id/dots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/SlideViewPager"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:orientation="horizontal" />

            <TextView
                android:id="@+id/selectCategory"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/dots"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="Select a category"
                android:textColor="#000000"
                android:textSize="24dp"
                android:textStyle="bold" />


            <GridLayout
                android:id="@+id/GridLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/selectCategory"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="30dp"
                android:columnCount="2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_columnWeight="1"
                    android:padding="20px">

                    <Button
                        android:id="@+id/button1"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/category_buttons"
                        android:text="Graphics Design"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_columnWeight="1"
                    android:padding="20px">

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/category_buttons"
                        android:text="Psychology"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_columnWeight="1"
                    android:padding="20px">

                    <Button
                        android:id="@+id/button3"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/category_buttons"
                        android:text="Tourism"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_columnWeight="1"
                    android:padding="20px">

                    <Button
                        android:id="@+id/button4"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/category_buttons"
                        android:text="Computer Science"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_columnWeight="1"
                    android:padding="20px">

                    <Button
                        android:id="@+id/button5"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/category_buttons"
                        android:text="Laws"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="30px"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_columnWeight="1"
                    android:padding="20px">

                    <Button
                        android:id="@+id/button6"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/category_buttons"
                        android:text="Arts and Culture"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="30px"
                        android:textSize="20sp" />
                </LinearLayout>
            </GridLayout>


        </RelativeLayout>

    </ScrollView>
    

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/navigation_header"
        app:menu="@menu/drawer_menu"
        app:theme="@style/NavigationViewStyle" />


</androidx.drawerlayout.widget.DrawerLayout>